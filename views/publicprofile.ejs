<!DOCTYPE html>
<html>
<head>
  <title><%= targetUser %>'s Profile</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <h1><%= targetUser %>'s Profile</h1>

  <% 
    let displayPhoto = profile.photo;
    if (displayPhoto && !displayPhoto.startsWith('/uploads/PFP/')) {
      displayPhoto = displayPhoto.replace('/uploads/profiles/', '/uploads/PFP/');
    }
  %>

  <% if (displayPhoto) { %>
    <img src="<%= displayPhoto %>" alt="Profile Picture" style="width: 100px; height: 100px; border-radius: 50%;"><br><br>
  <% } else { %>
    <img src="/uploads/PFP/default.jpg" alt="Default Profile Picture" style="width: 100px; height: 100px; border-radius: 50%;"><br><br>
  <% } %>

  <p><strong>Bio:</strong> <%= profile.bio || 'No bio provided.' %></p>

  <form action="/friends/request" method="POST">
    <input type="hidden" name="targetUser" value="<%= targetUser %>">
    <button type="submit">Send Friend Request</button>
  </form>

  <br>
  <a href="/blog/dashboard">‚Üê Back to Dashboard</a>
</body>
</html>
